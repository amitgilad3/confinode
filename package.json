{
  "name": "confinode",
  "version": "0.2.0",
  "description": "Node application configuration reader",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "type": "commonjs",
  "files": [
    "lib/**",
    "!lib/**/*.spec.*",
    "!lib/**/*.map",
    "!lib/tools/**"
  ],
  "scripts": {
    "prepublishOnly": "npm run all",
    "all": "npm run clean && npm run test && npm run build",
    "test": "npm run test:lint && npm run test:dep && npm run test:unit",
    "test:lint": "eslint --config .eslintrc.full.yaml 'src/**/*.ts'",
    "test:dep": "depcheck",
    "test:unit": "cross-env TS_NODE_FILES=true TS_NODE_COMPILER=ttypescript nyc mocha 'src/**/*.spec.ts'",
    "build": "npm run build:main && npm run build:extensions",
    "build:extensions": "cross-env TS_NODE_FILES=true TS_NODE_COMPILER=ttypescript ts-node src/tools/managedExtensions.ts doc/extensions.txt",
    "build:main": "ttsc",
    "clean": "rimraf lib"
  },
  "keywords": [
    "node",
    "application",
    "configuration",
    "reader",
    "universal"
  ],
  "author": "Slune",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/slune-org/confinode.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "path-type": "4.0.0",
    "yaml": "1.7.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "1.0.1",
    "@types/chai": "4.2.8",
    "@types/chai-as-promised": "7.1.2",
    "@types/mocha": "7.0.1",
    "@types/node": "13.7.0",
    "@types/sinon": "7.5.1",
    "@types/sinon-chai": "3.2.3",
    "@types/yaml": "1.2.0",
    "@typescript-eslint/eslint-plugin": "2.19.0",
    "@typescript-eslint/parser": "2.19.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "cross-env": "7.0.0",
    "depcheck": "0.9.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsdoc": "21.0.0",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "mocha": "7.0.1",
    "nyc": "15.0.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.1",
    "sinon": "8.1.1",
    "sinon-chai": "3.4.0",
    "source-map-support": "0.5.16",
    "ts-node": "8.6.2",
    "ts-transform-auto-require": "1.1.0",
    "ttypescript": "1.5.10",
    "typescript": "3.7.5"
  }
}
